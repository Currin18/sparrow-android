<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/profileHeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_header_height"
        android:background="@drawable/side_nav_bar"
        android:gravity="start"
        android:orientation="vertical"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingStart="@dimen/activity_vertical_margin"
        android:paddingEnd="@dimen/activity_vertical_margin"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/profileImage"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginTop="32dp"
            android:src="@mipmap/ic_launcher_round"
            app:civ_border_color="#ffffff"
            app:civ_border_width="1dp"/>

        <TextView
            android:id="@+id/profileName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/profile_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textAlignment="textStart"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/profileNick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/profile_nick"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textAlignment="textStart"
            android:textSize="14sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:id="@+id/profileFriendsLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:id="@+id/profileFriendsCount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="end|center_vertical"
                android:padding="4dp"
                android:text="@string/default_number"/>
            <ImageView
                android:id="@+id/profileFriendsIcon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="fitStart"
                android:padding="4dp"
                android:src="@drawable/ic_profile_friends"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/profileFollowersLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:id="@+id/profileFollowersCount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="end|center_vertical"
                android:padding="4dp"
                android:text="@string/default_number"/>
            <ImageView
                android:id="@+id/profileFollowersIcon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="fitStart"
                android:padding="4dp"
                android:src="@drawable/ic_profile_followers"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/profileDMLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:id="@+id/profileDMCount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="end|center_vertical"
                android:padding="4dp"
                android:text="@string/default_number"/>
            <ImageView
                android:id="@+id/profileDMIcon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="fitStart"
                android:padding="4dp"
                android:src="@drawable/ic_profile_dm"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>